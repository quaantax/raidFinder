<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".raidDataActivity">

    <TextView
        android:id="@+id/raidHoraDefault"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introduce la hora" />

    <EditText
        android:id="@+id/timeRaid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="time" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introduce el pokemom" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/pokemonRaid"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/gym" />

    <Button
        android:id="@+id/aceptarRaidButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:background="@drawable/button"
        android:textColor="#ffffff"/>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="4px" />

    <Button
        android:id="@+id/cancelarRaidButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Cancelar"
        android:textColor="#ffffff" />

</LinearLayout>